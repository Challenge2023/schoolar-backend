pipeline {
    environment {
        DOCKER_IMAGE = 'schoolarapi'
        DOCKER_TAG = "latest"
    }
    agent any
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Constrói a imagem Docker da aplicação usando o Dockerfile
                    // O '.' no final indica o contexto de build, que é o diretório atual (onde o Jenkins fez checkout do código)
                    docker.build("$DOCKER_IMAGE:$DOCKER_TAG .")
                }
            }
        }
        stage('Deploy with Docker Compose') {
            steps {
                script {
                    // Substitua './docker-compose.yml' pelo caminho correto do seu arquivo docker-compose.yml se não estiver na raiz do repositório
                    sh 'docker-compose -f ./docker-compose.yml up -d'
                }
            }
        }
    }
    post {
        always {
            // Ação para limpeza, como remover imagens Docker não utilizadas ou parar serviços
            script {
                sh 'docker-compose -f ./docker-compose.yml down'
                sh 'docker system prune -af'
            }
        }
    }
}