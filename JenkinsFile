pipeline {
    environment {
        DOCKER_IMAGE = 'schoolarapi'
        DOCKER_TAG = "latest"
        DOCKER_COMPOSE_VERSION = '3.8'
    }
    agent any
    stages {
        stage('Checkout') {
            steps {
                git(url: 'https://github.com/Challenge2023/schoolar-backend.git', credentialsId: '934f832b-4563-403e-b4bb-43c350f21fb6	')
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("$DOCKER_IMAGE:$DOCKER_TAG")
                }
            }
        }
        stage('Deploy with Docker Compose') {
            steps {
                script {
                    sh 'docker-compose -f docker-compose.yml up -d'
                }
            }
        }
    }
    post {
        always {
            script {
                sh 'docker-compose -f docker-compose.yml down'
                sh 'docker system prune -af'
            }
        }
    }
}
